{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Update Appointment Item",
  "type": "object",

  "properties": {

    "appointmentId": {
      "type": "string"
    },

    "serviceId": {
      "type": "string"
    },

    "barberId": {
      "type": "string"
    },

    "date": {
      "type": "string",
      "pattern": "[0-9]{4}-[0-9]{2}-[0-9]{2}"
    },

    "time": {
      "type": "string",
      "pattern": "[0-9]{2}:[0-9]{2}"
    }
  },

  "required": [
    "appointmentId",
    "serviceId",
    "barberId",
    "date",
    "time"
  ]
}